@section Scripts {
    <script src="~/js/circler_progress.js"></script>

    <script>
        let options = {
            startAngle: -1.55,
            size: 150,
            value: 0.98,
            fill: { gradient: ['#a445b2', '#fa4299'] }
        }


        $(".circle .bar").circleProgress(options).on('circle-animation-progress',
            function (event, progress, stepValue) {
                var spn = $(this).parent().find("span");
                console.log(spn);
                if (spn.find("img").length == 0) {
                    spn.text(String(stepValue.toFixed(2).substr(2)) + "%");
                }
            });



    </script>
    <script>
        // İleri ve geri butonlarına tıklanma durumunu dinlemek için event listenerlar ekleyelim.
        document.getElementById("bck_btn").addEventListener("click", geri);
        document.getElementById("frw_btn").addEventListener("click", ileri);

        function geri() {
            const items = document.querySelectorAll('input[type="radio"][name="slider"]');
            let checkedIndex = 0;

            // Mevcut seçili elemanın index'ini bulalım.
            for (let i = 0; i < items.length; i++) {
                if (items[i].checked) {
                    checkedIndex = i;
                    break;
                }
            }

            // Geriye doğru index'i azaltalım, 0'dan küçük olmasına izin vermeyelim.
            checkedIndex = checkedIndex - 1;
            console.log(checkedIndex);

            if (checkedIndex == -1) { checkedIndex = items.length - 1 }
            items[checkedIndex].checked = true;
        }

        function ileri() {
            const items = document.querySelectorAll('input[type="radio"][name="slider"]');
            let checkedIndex = 0;

            // Mevcut seçili elemanın index'ini bulalım.
            for (let i = 0; i < items.length; i++) {
                if (items[i].checked) {
                    checkedIndex = i;
                    break;
                }
            }

            // İleriye doğru index'i artıralım, son elemandan büyük olmasına izin vermeyelim.
            checkedIndex = checkedIndex + 1;
            if (checkedIndex == items.length) { checkedIndex = 0 }

            // Yeni seçili elemanı belirleyelim.
            items[checkedIndex].checked = true;
        }
    </script>


